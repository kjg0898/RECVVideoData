<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Properties>
        <Property name="LOG_DATEFORMAT_PATTERN">yyyy-MM-dd HH:mm:ss.SSS</Property>
        <Property name="LOG_LEVEL_PATTERN">%-5p</Property>
        <property name="LOG_FILELINE_PATTERN">%F:%L</property>
        <property name="LOG_MESSAGE_PATTERN">%m%n</property>
        <Property name="CONSOLE_LOG_PATTERN">[%d{${LOG_DATEFORMAT_PATTERN}}][${LOG_LEVEL_PATTERN}][${LOG_FILELINE_PATTERN}] - ${LOG_MESSAGE_PATTERN}</Property>
        <Property name="FILE_LOG_PATTERN">[%d{${LOG_DATEFORMAT_PATTERN}}][${LOG_LEVEL_PATTERN}][${LOG_FILELINE_PATTERN}] - ${LOG_MESSAGE_PATTERN}</Property>
        <property name="LOG_PATH">/was/mediator</property>
        <property name="FILE_APPENDER_NAME">ApplicationLog</property>
        <property name="FILE_NAME">${LOG_PATH}/${FILE_APPENDER_NAME}.log</property>
        <property name="FILE_NAME_PATTERN">${LOG_PATH}/${FILE_APPENDER_NAME}-%d{yyyy-MM-dd}-%i.log</property>
    </Properties>

    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="${CONSOLE_LOG_PATTERN}"/>
        </Console>

        <RollingFile name="File" fileName="${FILE_NAME}" filePattern="${FILE_NAME_PATTERN}">
            <PatternLayout>
                <Pattern>${FILE_LOG_PATTERN}</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" />
                <SizeBasedTriggeringPolicy size="500MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>
